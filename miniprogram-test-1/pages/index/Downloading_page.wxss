/* pages/index/Downloading_page.wxss */
    .downloading-page {
			width: 300px;
			margin: 0 auto;
			font-family: Tahoma, Geneva, sans-serif;
		}
    .downloading-page view {
			text-align: center;
			color: #7F27B4;
			font-size: 18px;
			margin-bottom: 10px;
		}
    .downloading-page input[type="text"] {
			width: 100%;
			padding: 10px;
			border: 1px solid #dddddd;
			margin-bottom: 10px;
			box-sizing:border-box;
		}
    .downloading-page button {
			width: 100%;
			background-color: #7F27B4;
			border: 0;
			box-sizing: border-box;
			cursor: pointer;
			font-weight: bold;
			color: #ffffff;
      margin-top: 10px;
		}
